{
  "compilerOptions": {
    "outDir": "./.eg", // 输出目录
    "rootDir": "./", // 输入文件的根目录
    "target": "es6", // 目标版本
    "module": "nodenext",
    "strict": false, // 启用严格类型检查
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "noEmitOnError": false,
    "checkJs": false,
    "allowJs": true
    // "maxNodeModuleJsDepth": 0
  },
  "include": [
    "index.ts" // 包含要编译的文件
  ],
  "exclude": [
    ".eg" // 排除输出目录，避免递归编译
  ]
}
